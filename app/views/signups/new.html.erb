<div class="contact-main">
  <div class="content container">
    <h1>Get the latest updates</h1>
    <div class="row">
      <div class="col-md-4 col-md-4-offset"></div>
      <div class="col-md-4">
        <%= form_for(@signup) do |f| %>
        <div class="field">
          <div class="form-group">
            <%= f.label :firstname, "first name" %><br>
            <%= f.text_field :firstname, class: "form-control" %><br>
          </div>
          <div class="form-group">
            <%= f.label :email, "email" %><br>
					<%= f.text_field :email, class: "form-control" %><br>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "join", class: "btn btn-default" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 col-md-4-offset">
    </div>
  </div>
</div>